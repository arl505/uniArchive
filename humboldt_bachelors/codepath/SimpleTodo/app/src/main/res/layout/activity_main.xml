<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bttnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="onAddItem"
        android:text="@string/bttnAddItem" />

    <ListView
        android:id="@+id/lvItems"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_above="@+id/bttnAddItem"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/etNewItem"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bttnAddItem"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_toStartOf="@+id/bttnAddItem"
        android:layout_toLeftOf="@+id/bttnAddItem"
        android:ems="10"
        android:hint="Add a new item here"
        android:inputType="textPersonName" />

</RelativeLayout>